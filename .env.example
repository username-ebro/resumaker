# Resumaker - Environment Variables Template
# Copy this to .env and fill in actual values

# ==========================================
# API KEYS
# ==========================================

# Claude (Anthropic) - For AI conversation and resume generation
CLAUDE_API_KEY=your_claude_api_key_here

# Gemini (Google) - For OCR and document parsing
GEMINI_API_KEY=your_gemini_api_key_here

# ==========================================
# SUPABASE
# ==========================================

# Supabase Project
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_PROJECT_REF=your_project_ref

# Supabase Keys
SUPABASE_ANON_KEY=your_publishable_key_here
SUPABASE_SECRET_KEY=your_secret_key_here

# Database
SUPABASE_DB_PASSWORD=your_database_password

# ==========================================
# DATABASE CONNECTION
# ==========================================

# Direct Connection (for migrations, admin tasks)
DATABASE_URL=postgresql://postgres:your_password@db.your-project-ref.supabase.co:5432/postgres

# Transaction Pooler (for serverless/lambda)
# DATABASE_URL=postgresql://postgres.your-project-ref:your_password@aws-1-us-east-2.pooler.supabase.com:6543/postgres

# Session Pooler (for long-lived connections)
# DATABASE_URL=postgresql://postgres.your-project-ref:your_password@aws-1-us-east-2.pooler.supabase.com:5432/postgres

# ==========================================
# APPLICATION
# ==========================================

# Environment
NODE_ENV=development

# App URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8000

# Backend API (FastAPI)
BACKEND_PORT=8000
BACKEND_HOST=0.0.0.0

# ==========================================
# FEATURE FLAGS (Optional)
# ==========================================

# Enable/disable features
ENABLE_VOICE_INPUT=true
ENABLE_REFERENCE_SYSTEM=true
ENABLE_MULTI_LANGUAGE=false
ENABLE_ANALYTICS=false

# ==========================================
# SECURITY
# ==========================================

# JWT Secret (generate a random string)
JWT_SECRET=your_jwt_secret_here

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://resumaker.vercel.app

# ==========================================
# FILE STORAGE
# ==========================================

# Max file upload size (in MB)
MAX_UPLOAD_SIZE_MB=10

# Allowed file types
ALLOWED_UPLOAD_TYPES=pdf,docx,doc

# ==========================================
# EXTERNAL SERVICES (Optional)
# ==========================================

# Email (for notifications, future)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password

# Analytics (future)
# ANALYTICS_ID=your_analytics_id

# ==========================================
# DEVELOPMENT
# ==========================================

# Debug mode
DEBUG=false

# Log level (debug, info, warning, error)
LOG_LEVEL=info

# Enable hot reload
HOT_RELOAD=true
